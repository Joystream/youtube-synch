{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Nest",
      "program": "${workspaceFolder}/packages/api/src/main.ts",
      "preLaunchTask": "tsc: watch - packages/api/tsconfig.json",
      "outFiles": ["${workspaceFolder}/dist/packages/api/**/*.js"],
      "skipFiles": [
        "${workspaceFolder}/node_modules/**/*.js",
        "<node_internals>/**/*.js"
      ],
      "envFile": "${workspaceFolder}/packages/api/.env",
      "port": 3001
    }
  ]
}

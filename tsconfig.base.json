{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@joystream/monitor": ["packages/monitor/index.ts"],
      "@joystream/ytube": ["packages/ytube/src/index.ts"],
      "@youtube-sync/infrastructure": ["packages/infrastructure/src/index.ts"],
      "@youtube-sync/joy-api": ["packages/joy-api/src/index.ts"],
      "@youtube-sync/monitor": ["packages/monitor/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}

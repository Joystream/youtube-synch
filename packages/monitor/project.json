{
  "root": "packages/monitor",
  "sourceRoot": "packages/monitor",
  "projectType": "library",
  "targets": {
    "build-lambdas": {
      "executor": "@nrwl/node:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/monitor",
        "tsConfig": "packages/monitor/tsconfig.lib.json",
        "packageJson": "packages/monitor/package.json",
        "main": "packages/monitor/index.ts",
        "optimization": true,
        "extractLicenses": true,
        "inspect": false,
        "webpackConfig": "packages/api/webpack.config.js",
        "externalDependencies": "none"
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "externalDependencies": "none"
        }
      }
    },
    "build-processingServer": {
      "executor": "@nrwl/node:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/processing-server",
        "tsConfig": "packages/monitor/tsconfig.lib.json",
        "main": "packages/monitor/src/server/index.ts",
        "extractLicenses": true,
        "inspect": false,
        "webpackConfig": "packages/api/webpack.config.js",
        "externalDependencies": [
          "pg-native",
          "pg-query-stream",
          "oracledb",
          "mysql",
          "mysql2",
          "tedious",
          "sqlite3",
          "better-sqlite3"
        ]
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false
        }
      }
    },
    "start-server": {
      "executor": "@nrwl/node:execute",
      "options": {
        "buildTarget": "monitor:build-processingServer"
      }
    },
    "preview": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": ["pulumi preview"],
        "color": true,
        "cwd": "packages/monitor"
      },
      "dependsOn": [
        {
          "target": "build:production",
          "projects": "self"
        }
      ]
    },
    "deploy": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "pulumi up --skip-preview --yes",
        "cwd": "packages/monitor",
        "color": true
      },
      "dependsOn": [
        {
          "target": "build",
          "projects": "self"
        }
      ]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/monitor/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/monitor"],
      "options": {
        "jestConfig": "packages/monitor/jest.config.js",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
